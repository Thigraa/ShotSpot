<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShotSpot" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#262626</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/bgEdittext</item>
        <!-- Customize your theme here. -->
        <item name="bg">@drawable/background_light</item>
        <item name="bgColor">#EEEEEE</item>
        <item name="mainText">#262626</item>
        <item name="buttonBg">#262626</item>
        <item name="invertedText">#EEEEEE</item>
        <item name="bgEdittext">#E1E1E1</item>
        <item name="rippleColor">#42262626</item>
        <item name="mapTheme">light_map_style</item>
        <item name="snackbarStyle">@style/snackbarFragment</item>
        <item name="like_filled">@drawable/like_black_24</item>
        <item name="like_unfilled">@drawable/like_black_filled_24</item>
        <item name="locationIcon">@drawable/ic_outline_location_on_24</item>
        <item name="commentIcon">@drawable/ic_outline_mode_comment_24</item>
    </style>
    <style name="buttonRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>